<ion-list>
  <div class="item item-divider">
    {{model.name}}
  </div>
  {{#each model.categories as |category|}}
    {{#link-to category.nextRoute category.slug}}
      <ion-item complex icon-right as |section|>
        {{#if section.link}}
          <h2>{{category.name}}</h2>
          <i class="icon ion-chevron-right icon-accessory"></i>
        {{/if}}
      </ion-item>
    {{/link-to}}
  {{/each}}
</ion-list>
