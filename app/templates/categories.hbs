<ion-list>
  <div class="item item-divider">
    Categories
  </div>
  {{#each model as |category|}}
    {{#link-to "categories" category.slugChain}}
      <ion-item complex icon-right as |section|>
        {{#if section.link}}
          <h2>{{category.name}}</h2>
          <i class="icon ion-chevron-right icon-accessory"></i>
        {{/if}}
      </ion-item>
    {{/link-to}}
  {{/each}}
</ion-list>
